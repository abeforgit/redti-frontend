<aside data-test-sidebar
       class="w-100 w-25-l overflow-auto absolute-l bottom-0-l top-0-l left-0-l flex flex-column br-l bw2-l w5">
    <div class="flex pa2">
        <LinkTo @route="items.new" class="pr2">
            <Button class="b--green">
                {{t "item.new"}}
            </Button>
        </LinkTo>
        <Button class="b--orange">{{t "container.new"}}</Button>
    </div>

    <div class="pt2 flex flex-column">

    {{#each @items as |item|}}
        {{#if item.container}}
            <SidebarContainer @item={{item}}/>
        {{else}}
            <SidebarItem @item={{item}}/>
        {{/if}}
    {{/each}}
    </div>
</aside>
