<Sidebar::Collapsible @open={{this.open}} @toggle={{this.toggle}} as |collapsible|>
    <collapsible.header>
        <Dropzone
            @contentType="text/plain"
            @dropItem={{this.transferItem}}
                          @dropEnter={{this.dropEnter}}
            @dropLeave={{this.dropLeave}}
                          class= {{if (gt this.underDrag 0) "ba bw1 b--black" "ba bw1 b--transparent"}}
        >
            <Sidebar::Link @route="locations.location" @model={{@location.id}}>
                {{@location.name}}
            </Sidebar::Link>
        </Dropzone>
    </collapsible.header>
    <collapsible.body>
        <div class="flex flex-column">
            {{#each this.items as |item|}}
                <Sidebar::Item @item={{item}} />
            {{/each}}
        </div>
    </collapsible.body>
</Sidebar::Collapsible>
