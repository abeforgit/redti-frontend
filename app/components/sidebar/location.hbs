<Sidebar::Collapsible @open={{this.open}} @toggle={{this.toggle}} as |collapsible|>
    <collapsible.header>
        <Sidebar::Link @route="locations.location" @model={{@location}}>
            {{@location.name}}
        </Sidebar::Link>
    </collapsible.header>
    <collapsible.body>
        <div class="flex flex-column">
            {{#each @location.initiatives as |initiative|}}
              <Sidebar::Link @route="initiatives.initiative" @model={{initiative}}>
                {{initiative.name}}
              </Sidebar::Link>
            {{/each}}
        </div>
    </collapsible.body>
</Sidebar::Collapsible>
