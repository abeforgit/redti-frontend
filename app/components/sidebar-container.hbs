<span class="code f4 pv1 pl2 pointer">
    <Dropzone @contentType="text/plain"
              @dropItem={{this.changeParent}}
                            @dropEnter={{this.dropEnter}}
              @dropLeave={{this.dropLeave}}
                            class= {{if (gt this.underDrag 0) "ba bw1 b--black" "ba bw1 b--transparent"}}
    >
            <div data-test-marker class="dib ws-nowrap" >
                <button type="button" class="bn bg-white pointer" {{on "click" this.toggle}} >
                    {{#if this.open}}
                        <FaIcon class="black hover-red" @icon="angle-down"/>
                    {{else}}
                        <FaIcon class="black hover-red" @icon="angle-right"/>
                    {{/if}}
                </button>
            </div><Draggable @content={{@item.id}} @contentType="text/plain">
                <LinkTo
                    data-test-sidebaritem-link
                    class={{concat "no-underline f4" (if this.active " red" " black")}}
                          @route="items.item"
                    @model={{@item.id}}
                    {{on "click" this.expand}}
                >
                    {{@item.name}}
                </LinkTo>
            </Draggable>
    </Dropzone>
    {{#if this.open}}
        <div class="flex flex-column pl2">
            {{#each @item.children as |child| }}
                {{#if child.container}}
                    <SidebarContainer @item={{child}}/>
                {{else}}
                    <SidebarItem @item={{child}} class="pl4"/>
                {{/if}}
            {{/each}}
        </div>
    {{/if}}
</span>
