<span class="code f4 pv1 pl2 pointer">
    <Dropzone
    >
        <div data-test-marker class="dib ws-nowrap" >
            <button type="button" class="bn bg-white pointer" {{on "click" this.toggle}} >
                {{#if this.open}}
                    <FaIcon class="black hover-red" @icon="angle-down"/>
                {{else}}
                    <FaIcon class="black hover-red" @icon="angle-right"/>
                {{/if}}
            </button>
        </div><Draggable @content={{@item.id}} @contentType="text/plain">
            <LinkTo
                data-test-sidebaritem-link
                class={{concat "no-underline f4" (if this.active " red" " black")}}
                      @route="items.item"
                @model={{@item.id}}
                {{on "click" this.expand}}
            >
                {{@item.name}}
            </LinkTo>
        </Draggable>
    </Dropzone>
    {{#if this.open}}
    {{/if}}
</span>
