<Button {{on "click" this.seed}}> Z A A D </Button>
{{#with (changeset @model.reservation this.newReservationValidation) as |changeset|}}
  <UiForm @onSubmit={{perform this.addReservation}}
          @changeSet={{changeset}}
          as |form|>
    {{#each @model.categories as |category|}}
        <h2>{{category.name}}</h2>
        {{#each category.items as |item|}}
          <form.Group @for={{item.id}} as |group|>
            <group.Label>
              {{item.name}}
            </group.Label>
            <group.Input @type="number" />
            <group.Error />
          </form.Group>
        {{/each}}
    {{/each}}
    <form.Submit>
      {{t "save"}}
    </form.Submit>
  </UiForm>
{{/with}}