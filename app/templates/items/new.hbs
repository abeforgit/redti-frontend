<ModalDialog
    @targetAttachment="center"
    @onClose={{this.goBack}}
                       @translucentOverlay={{true}}
>
    {{#if this.container}}
        <h1 class="ph5 tac f1 helvetica">{{t "container.new"}}</h1>
    {{else}}
        <h1 class="ph5 tac f1 helvetica">{{t "item.new"}}</h1>

    {{/if}}
    <div class="pa4 flex flex-column">
        <UiForm @onSubmit={{perform this.addItem}}
                          @changeSet={{changeset @model this.newItemValidation}}
                as |form|>
            <form.Group @for="name" as |group|>
                <group.Label>
                    {{t "item.name"}}
                </group.Label>
                <group.Input type="text" />
                <group.Error/>
            </form.Group>

            <form.Group @for="description" as |group|>
                <group.Label>
                    {{t "item.description"}}
                </group.Label>
                <group.Input type="textarea" />
                <group.Error/>
            </form.Group>

            {{#unless this.container}}

                <form.Group @for="unit" as |group|>
                    <group.Label>
                        {{t "item.unit"}}
                    </group.Label>
                    <group.Input type="text" />
                    <group.Error/>
                </form.Group>

                <form.Group @for="quantity" as |group|>
                    <group.Label>
                        {{t "item.quantity"}}
                    </group.Label>
                    <group.Input type="number" />
                    <group.Error/>
                </form.Group>
            {{/unless}}

            <Button @onClick={{this.goBack}}>
                {{t "cancel"}}
            </Button>
            <form.Submit>
                {{t "save"}}
            </form.Submit>
        </UiForm>
    </div>
</ModalDialog>
